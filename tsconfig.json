{
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/node18/tsconfig.json"],
  "compilerOptions": {
    "outDir": "out",
    "sourceMap": true,
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "bundler",
    "module": "es2022"
  },
  "exclude": ["node_modules", ".test-extensions"],
  "include": ["src", "test", "test-support", "ui-test"]
}
