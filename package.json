{
  "name": "cairo1",
  "displayName": "Cairo 1.0",
  "description": "Cairo language support for Visual Studio Code.",
  "version": "2.9.1",
  "publisher": "StarkWare",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "cairo",
    "starknet",
    "scarb",
    "starkware",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/software-mansion/vscode-cairo.git"
  },
  "license": "Apache-2.0",
  "icon": "icons/marketplace.png",
  "galleryBanner": {
    "color": "#111011",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:cairo",
    "workspaceContains:**/cairo_project.toml",
    "workspaceContains:**/Scarb.toml"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "cairo",
        "aliases": [
          "Cairo",
          "cairo"
        ],
        "extensions": [
          ".cairo"
        ],
        "icon": {
          "light": "./icons/cairo-file.svg",
          "dark": "./icons/cairo-file.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cairo",
        "scopeName": "source.cairo",
        "path": "./syntaxes/cairo.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "cairo",
        "path": "./snippets/cairo.json"
      }
    ],
    "commands": [
      {
        "command": "cairo.reload",
        "title": "Reload workspace",
        "category": "Cairo"
      },
      {
        "command": "cairo.expandMacro",
        "title": "Recursively expand macros for item at caret",
        "category": "Cairo"
      },
      {
        "command": "cairo.viewAnalyzedCrates",
        "title": "View currently analyzed crates",
        "category": "Cairo"
      }
    ],
    "configuration": [
      {
        "title": "Cairo",
        "properties": {
          "cairo1.enableLanguageServer": {
            "type": "boolean",
            "default": "true",
            "description": "Enable the Cairo language server.",
            "scope": "window"
          },
          "cairo1.languageServerPath": {
            "type": "string",
            "description": "Path to the Cairo language server (cairo-language-server).",
            "scope": "window"
          },
          "cairo1.enableScarb": {
            "type": "boolean",
            "default": "true",
            "description": "Enable the use of Scarb package manager.",
            "scope": "window"
          },
          "cairo1.preferScarbLanguageServer": {
            "type": "boolean",
            "default": "true",
            "markdownDescription": "If the workspace contains a Scarb.toml file, prefer using `scarb cairo-language-server` over standalone `cairo-language-server` (e.g. one specified by `cairo1.languageServerPath`).",
            "scope": "window"
          },
          "cairo1.scarbPath": {
            "type": "string",
            "description": "Absolute path to the Scarb package manager binary.",
            "scope": "window"
          },
          "cairo1.corelibPath": {
            "type": "string",
            "description": "Absolute path to the Cairo core library, used in non-Scarb projects.",
            "scope": "window"
          },
          "cairo1.traceMacroDiagnostics": {
            "type": "boolean",
            "description": "Attach additional information to diagnostics coming from macros, providing diagnostic source in macro generated code.",
            "scope": "window"
          },
          "cairo1.languageServerExtraEnv": {
            "type": [
              "null",
              "object"
            ],
            "additionalProperties": {
              "type": [
                "string",
                "number"
              ]
            },
            "default": {},
            "markdownDescription": "Extra environment variables that will be passed to the `cairo-language-server` executable.\nUseful for passing e.g. `CAIRO_LS_LOG` for debugging."
          },
          "cairo1.showInStatusBar": {
            "type": "boolean",
            "default": true,
            "description": "Show CairoLS information in the status bar.",
            "scope": "window"
          },
          "cairo1.enableProcMacros": {
            "type": "boolean",
            "default": false,
            "description": "Enable support for procedural macros. This feature is in active development and may not work flawlessly yet!",
            "scope": "window"
          }
        }
      }
    ],
    "configurationDefaults": {
      "[cairo]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true
      },
      "explorer.fileNesting.patterns": {
        "Scarb.toml": "Scarb.lock"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "code": "code --extensionDevelopmentPath=$PWD --wait --verbose",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "compile-watch": "npm run compile -- --watch",
    "compile-test": "tsc -p ./",
    "fmt": "prettier --write .",
    "gen-cairo-snippets": "node ./bin/gen-cairo-snippets.mjs",
    "lint": "npm run lint-fmt && npm run lint-eslint",
    "lint-eslint": "eslint .",
    "lint-fmt": "prettier --check .",
    "test": "node --test out/test/**/*.test.js",
    "scarb-pick-test": "extest setup-and-run './out/test/lsVersion.js' --code_version max --code_settings ui-test/settings.json --extensions_dir .test-extensions",
    "ui-test": "extest setup-and-run './out/ui-test/*.js' --code_version max --code_settings ui-test/settings.json --extensions_dir .test-extensions"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "dependencies": {
    "promise-timeout": "^1.3.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/chai": "4.3.11",
    "@types/command-exists": "^1.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.15.3",
    "@types/promise-timeout": "^1.3.3",
    "@types/vscode": "^1.84.2",
    "@vscode/test-electron": "^2.4.1",
    "chai": "4.5.0",
    "command-exists": "^1.2.9",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "globals": "^15.13.0",
    "prettier": "3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vscode-extension-tester": "^8.10.0",
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.1.0"
  }
}
